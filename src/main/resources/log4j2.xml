<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">
	<!-- Appenders Section     -->
	<Appenders>
		<!-- Console Appender -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n" />
		</Console>

		<!-- File Appender -->
		<!-- Logs will be saved inside logs/application.log -->
		<File name="File"
			fileName="logs/application.log"
			append="true">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n" />
		</File>
	</Appenders>
	<!-- Loggers Section       -->
	<Loggers>
		<!-- Root Logger -->
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>
